<odoo>

<record id="view_order_form" model="ir.ui.view">
    <field name="name">sale.order.form.sale_addresses</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <field name="partner_id" position="attributes">
            <attribute name="domain">[('customer','=',True), '|', ('type', '=', 'other'), ('parent_id', '=', False)]</attribute>
            <attribute name="context">{'show_address': 1, 'show_vat': True}</attribute> 
        </field>
        <field name="partner_invoice_id" position="attributes">
            <attribute name="domain">[('id', 'parent_of', partner_id), '|', ('parent_id', '=', False), ('type', '=', 'invoice')]</attribute>
        </field>
        <field name="partner_shipping_id" position="attributes">
            <attribute name="domain">[('id', 'child_of', partner_id), '|', ('type', 'in', ('delivery', 'other')), ('parent_id', '=', False)]</attribute>
            <attribute name="context">{'default_type':'delivery', 'show_address': True}</attribute>
        </field>
    </field>
</record>

</odoo>
