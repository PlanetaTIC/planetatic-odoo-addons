<odoo>

<record id="module_form" model="ir.ui.view">
    <field name="name">ir.module.module.form.cloc</field>
    <field name="model">ir.module.module</field>
    <field name="inherit_id" ref="base.module_form"/>
    <field name="arch" type="xml">
        <field name="dependencies_id" position="after">
            <group string="Lines of code"/>
            <button type="object" name="action_view_cloc" string="View report" class="btn-link"/>
        </field>
    </field>
</record>

<record id="action_view_cloc" model="ir.actions.server">
    <field name="name">View lines of code</field>
    <field name="condition">True</field>
    <field name="type">ir.actions.server</field>
    <field name="model_id" ref="model_ir_module_module"/>
    <field name="state">code</field>
    <field name="code">action = model.action_view_cloc()</field>
</record>

<record id="link_view_cloc" model="ir.values">
    <field name="model_id" ref="model_ir_module_module"/>
    <field name="name">View lines of code</field>
    <field name="key2">client_action_multi</field>
    <field name="value" eval="'ir.actions.server,' + str(ref('action_view_cloc'))"/>
    <field name="key">action</field>
    <field name="model">ir.module.module</field>
</record>

</odoo>
